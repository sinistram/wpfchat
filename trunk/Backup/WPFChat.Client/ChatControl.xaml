<UserControl x:Class="WPFChat.Client.ChatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinWidth="100">
    <DockPanel>
        <TextBox Name="txtChat" 
                 Margin="4" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Visible" 
                 DockPanel.Dock="Top" 
                 MinHeight="100">

        </TextBox>
        <Separator></Separator>
        <StackPanel Orientation="Horizontal">
            <DockPanel>
                <TextBox Name="txtNewMessage" Margin="4" DockPanel.Dock="Left" MinWidth="100"></TextBox>
                <Button DockPanel.Dock="Right" Margin="4" Name="btnSend" Click="btnSend_Click">Send</Button>
            </DockPanel>
        </StackPanel>
    </DockPanel>
    
</UserControl>
